import java.util.*
;
public class Hourglass {
	
	public static void main(String[] args) {
		Scanner userInput = new Scanner(System.in);
		System.out.println("How long do you want the hourglass to be? (Enter an even number)");
		int quotes = userInput.nextInt();
		
		System.out.print("|");
		for(int j = 0; j<quotes; j++){
			System.out.print("\"");
		}
		System.out.println("|");	
		
		for (int i=1; i<=quotes;i++){ 
			for (int s=1; s<=i;s++){
				System.out.print(" ");
			}
			System.out.print("\\");
			for (int k=1; k<=10-2*i;k++){
				System.out.print(":");
			}
			System.out.println("/");
		}
		
		for (int l = 0; l <= quotes/2; l++){
			System.out.print("|");
		}
		System.out.println();
		
		for (int i=quotes; i>=1;i--){ 
			for (int s=i; s>=1;s--){
				System.out.print(" ");
			}
			System.out.print("/");
			for (int k=1; k<=10-2*i;k++){
				System.out.print(":");
			}
			System.out.println("\\");
		}
		
		System.out.print("|");
		for(int j = 0; j<quotes; j++){
			System.out.print("\"");
		}
		System.out.println("|");	
	}
}
	

